<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#717171"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#444444"
        android:backgroundTint="#444444"
        android:foregroundTint="#444444"
        android:gravity="right|center_horizontal|center_vertical"
        android:paddingRight="25dp"
        android:text="0"
        app:strokeColor="#0C0606"
        app:strokeWidth="1sp"
        android:textColor="@color/white"
        android:textSize="38sp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOpAC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#565656"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="AC"
            android:textSize="38sp"
            app:strokeColor="#292929"
            app:strokeWidth="0.5dp"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/btnMasMenos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#565656"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="+/-"
            android:textSize="38sp"
            app:strokeColor="#292929"
            app:strokeWidth="0.5dp"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/btnOpPorcentaje"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#565656"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="%"
            android:textSize="38sp"
            app:strokeColor="#292929"
            app:strokeWidth="0.5dp"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/btnOpDiv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FC9F05"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="/"
            android:textSize="38sp"
            app:strokeColor="#292929"
            app:strokeWidth="0.5dp"
            tools:ignore="Suspicious0dp" />


        >
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDig7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#727272"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="7"
            android:textSize="38sp"
            app:strokeColor="#292929"
            app:strokeWidth="0.5dp"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/btnDig8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#727272"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="8"
            android:textSize="38sp"
            app:strokeColor="#292929"
            app:strokeWidth="0.5dp"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/btnDig9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#727272"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="9"
            android:textSize="38sp"
            app:strokeColor="#292929"
            app:strokeWidth="0.5dp"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/btnOpPor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FC9F05"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="X"
            android:textSize="38sp"
            app:strokeColor="#292929"
            app:strokeWidth="0.5dp"
            tools:ignore="Suspicious0dp" />


        >
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDig4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#727272"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="4"
            android:textSize="38sp"
            app:strokeColor="#292929"
            app:strokeWidth="0.5dp"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/btnDig5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#727272"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="5"
            android:textSize="38sp"
            app:strokeColor="#292929"
            app:strokeWidth="0.5dp"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/btnDig3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#727272"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="3"
            android:textSize="38sp"
            app:strokeColor="#292929"
            app:strokeWidth="0.5dp"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/btnOpMas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FC9F05"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="+"
            android:textSize="38sp"
            app:strokeColor="#292929"
            app:strokeWidth="0.5dp"
            tools:ignore="Suspicious0dp" />


        >
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnDig0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:backgroundTint="#727272"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="+"
            android:textSize="38sp"
            app:strokeColor="#292929"
            app:strokeWidth="0.5dp"
            tools:ignore="Suspicious0dp" />


        <Button
            android:id="@+id/btnOpPunto"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:backgroundTint="#727272"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="."
            android:textSize="38sp"
            app:strokeColor="#292929"
            app:strokeWidth="0.5dp"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/btnOpIgual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#FC9F05"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="="
            android:textSize="38sp"
            app:strokeColor="#292929"
            app:strokeWidth="0.5dp"
            tools:ignore="Suspicious0dp" />


        >
    </LinearLayout>


</LinearLayout>